@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Are you sure you want to delete this product?
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3">
                <input type="hidden" asp-for="Id" />
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    <span class="form-control border-0 shadow">@Model.Name</span>
                    <label asp-for="Name" class="p-0"></label>
                </div>
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    <span class="form-control border-0 shadow">@Model.Author</span>
                    <label asp-for="Author" class="p-0"></label>
                </div>
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    <span class="form-control border-0 shadow">@Model.Description</span>
                    <label asp-for="Description" class="p-0"></label>
                </div>
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    <span class="form-control border-0 shadow">@Model.PublishDate.Year</span>
                    <label asp-for="PublishDate" class="p-0"></label>
                </div>
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    <span class="form-control border-0 shadow">@Model.Price</span>
                    <label asp-for="Price" class="p-0"></label>
                </div>
                <div class="form-floating py-2 col-12 mt-2 mb-2">
                    @if (Model.Image != null)
                    {
                        var imreBase64Data = Model.Image;
                        byte[] bytes = Convert.FromBase64String(imreBase64Data);
                        var image = "data:image/png;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);
                        <div>

                            <div style="height:14em; width: 13.5em;">
                                <img src="@image" style="width:inherit; height:inherit;" />
                            </div>

                        </div>
                    }
                    <label asp-for="Image" class="p-0"></label>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Delete product</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                            Back to list
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}