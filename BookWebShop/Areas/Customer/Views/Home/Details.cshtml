@model ShoppingCart

<form method="post">
    <input hidden asp-for="Id" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header py-4" style="background-color:#3b3760 !important">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-light text-uppercase">@Model.Product.Name</h3>
                    <p class="text-light fw-semibold mb-0">by @Model.Product.Author</p>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-2 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn action-btn mb-5 fw-semibold btn-sm text-uppercase">
                            <small>Back to home</small>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="d-flex col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        @if (Model.Product.Image != null)
                        {
                            var imreBase64Data = Model.Product.Image;
                            byte[] bytes = Convert.FromBase64String(imreBase64Data);
                            var image = "data:image/png;base64," + Convert.ToBase64String(bytes, 0, bytes.Length);
                            <img src="@image" class="rounded" style="width:15rem; height:20rem;" />
                        }
                        else
                        {
                            <img src="https://fakeimg.pl/700x500/F8F8F8/080808?text=No+image&font=noto-serif" class="card-img-top rounded" style="width:10rem; height:200px" />
                        }
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">

                        <div class="col-12 col-md-6 pb-4">
                            <span class="h4">@ViewBag.CategoryName</span>
                        </div>
                        <div class="row text-start ps-2">
                            <div class="p-1 text-dark text-opacity-50">
                                <div>ISBN: @Model.Product.ISBN</div>
                            </div>
                        </div>
                        <div class="row text-start ps-2">
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-3 col-lg-2 bg-white text-warning fw-bold">
                                <div>@Model.Product.Price.ToString("c")</div>
                            </div>
                        </div>
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Model.Product.Description</p>
                        </div>
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3">
                                    <span class="input-group-text details-btn text-white border-0 fw-semibold"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input asp-for="Count" type="number" value="1" class="form-control text-end "
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1 mt-4">
                                <button type="submit"
                                        class="btn details-btn bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>